<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Location (typical for your app) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Network (needed for weather + reverse geocode) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MADAssg2025">

        <!-- Google Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_GOOGLE_MAPS_API_KEY" />

        <!-- Launcher -->
        <activity
            android:name="np.ict.mad.madassg2025.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home screen -->
        <activity
            android:name="np.ict.mad.madassg2025.HomePage"
            android:exported="false" />

        <!-- âœ… Forecast screen (THIS FIXES YOUR CRASH) -->
        <activity
            android:name="np.ict.mad.madassg2025.ForecastActivity"
            android:exported="false" />

        <activity android:name=".LocationsActivity" />

        <!-- Map Search -->
        <activity
            android:name=".MapSearchActivity"
            android:exported="false" />

        <activity android:name=".ProfilePage" android:exported="false" />

    </application>
</manifest>
